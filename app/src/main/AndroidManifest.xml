<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kurakani">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KuraKani"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.ToDo"></activity>
        <activity android:name=".Activities.Contacts" />
        <activity android:name=".Activities.Settings" />
        <activity android:name=".Activities.ChatActivity" />
        <activity android:name=".Activities.UserHome" />
        <activity android:name=".Activities.Details" />
        <activity
            android:name=".Activities.OTP"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.RegisterOrLogin"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activities.GetStarted" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>